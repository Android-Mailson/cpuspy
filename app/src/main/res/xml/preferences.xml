<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general" >
        <CheckBoxPreference
            android:key="autoRefresh"
            android:title="@string/pref_title_autorefresh"
            android:summary="@string/pref_summary_autorefresh"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_info" >
        <Preference
            android:key="about"
            android:title="@string/pref_title_about"
            android:summary="@string/pref_summary_about"
            android:persistent="false" >
        </Preference>

        <Preference
            android:key="license"
            android:title="@string/pref_title_license"
            android:persistent="false" >
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
